{
  "manifest_version": 3,
  "name": "Reclaim: Open With",
  "version": "1.0.0",
  "description": "Open Google Docs, Sheets, and Slides in desktop applications",
  "permissions": [
    "nativeMessaging",
    "contextMenus",
    "downloads",
    "notifications",
    "declarativeContent",
    "tabs"
  ],
  "host_permissions": [
    "https://docs.google.com/*"
  ],
  "background": {
    "service_worker": "dist/background.js",
    "type": "module"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Open in desktop app"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
