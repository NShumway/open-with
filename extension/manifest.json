{
  "manifest_version": 3,
  "name": "Reclaim: Open With",
  "version": "1.5.0",
  "description": "Open cloud documents in desktop applications",
  "permissions": [
    "activeTab",
    "nativeMessaging",
    "downloads",
    "notifications",
    "scripting"
  ],
  "host_permissions": [
    "https://onedrive.live.com/*",
    "https://*.sharepoint.com/*",
    "https://www.dropbox.com/*",
    "https://app.box.com/*",
    "https://*.app.box.com/*"
  ],
  "background": {
    "service_worker": "dist/background.js",
    "type": "module"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Open in desktop app",
    "default_popup": "dist/popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
